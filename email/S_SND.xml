    <shortCode>messagessent</shortCode>
  </stateVariable>

</serviceStateTable>

<actionList>

  <action>
    <name>SendMail</name>
    <argumentList>
      <argument>
        <name>subject</name>
        <direction>in</direction>
      </argument>
      <argument>
        <name>body</name>
        <direction>in</direction>
      </argument>
    </argumentList>
  </action>
  
</actionList>

</scpd>