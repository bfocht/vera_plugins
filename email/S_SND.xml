<serviceStateTable>

  <stateVariable>
    <name>SMTPServer</name>
    <sendEventsAttribute>no</sendEventsAttribute>
    <dataType>string</dataType>
    <defaultValue></defaultValue>
    <shortCode>smtpserver</shortCode>
  </stateVariable>

  <stateVariable>
    <name>SMTPAuthUser</name>
    <sendEventsAttribute>no</sendEventsAttribute>
    <dataType>string</dataType>
